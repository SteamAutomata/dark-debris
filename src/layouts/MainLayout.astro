---
import SlamOrSisr from "../components/slamsisr/SlamOrSisr"
interface Props {
	title: string
}
const { title } = Astro.props
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<!-- <link rel="stylesheet" href="/style.css" /> -->
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro</title>

		<style is:global>
			/* .card {
				background-color: white;
				border-radius: 0.375rem;
			} */

			/* h1 {
				font-size: larger;
				font-weight: bolder;
			} */

			body {
				background-image: url("/Tile-Bg-Autumn-saturation.webp");
				background-repeat: repeat;
				animation: scrollBackground 10s linear infinite;
			}

			@media (prefers-reduced-motion) {
				body {
					animation: none;
				}
			}

			@keyframes scrollBackground {
				0% {
					background-position: 0 0;
				}
				100% {
					background-position: 250px 250px;
				}
			}

			.btn {
				--fancy-button-gradient-0: #8d49fd;
				--fancy-button-gradient-50: #7f56f3;
				--fancy-button-gradient-100: #5691f3;
				--fancy-button-inner-shadow-top: rgba(233, 209, 255, 0.2);
				--fancy-button-inner-shadow-top-lg: rgba(9, 12, 60, 0.1);
				--fancy-button-inner-shadow-bottom: rgba(137, 222, 246, 0.3);
				overflow: hidden;
				cursor: pointer;
				color: #fff;
				background-image: linear-gradient(
					to bottom,
					var(--fancy-button-gradient-0) 0%,
					var(--fancy-button-gradient-50) 50%,
					var(--fancy-button-gradient-100) 100%
				);
				box-shadow:
					0px 4px 12px rgba(9, 12, 60, 0.15),
					0px 2px 8px rgba(9, 12, 60, 0.15),
					0px 1px 3px var(--fancy-button-inner-shadow-top-lg),
					inset 0px 1px 1px var(--fancy-button-inner-shadow-top),
					inset 0px -1px 3px var(--fancy-button-inner-shadow-bottom);
			}
		</style>
	</head>

	<body>
		<main
			class="flex flex-col justify-center text-center align-middle max-w-md m-auto gap-2 dark"
		>
			<div class="h-5"></div>
			<h1 class="text-xl text-white">{title}</h1>
			<div class="h-10"></div>
			<div
				class="bg-indigo-50 bg-opacity-100 rounded-lg p-8 shadow-lg shadow-indigo-950"
				style="min-height: 400px;"
			>
				<slot />
			</div>
			<SlamOrSisr client:load />
		</main>
	</body>
</html>
