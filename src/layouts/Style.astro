	a {
		color: #0070f3;
		text-decoration: none;
		border-bottom: 1px solid #0070f3;
	}

	/* @media not (prefers-reduced-motion) { */
	body {
		animation: scrollBackground 10s linear infinite;
	}

	li {
		animation: dropIn 0.5s ease-out forwards;
	}

	li .drop,
	.drop1,
	.drop2,
	.drop3 {
		animation: dropIn 0.5s ease-out forwards;
		animation-delay: calc(var(--order) * 100ms);
	}
	.drop1 {
		--order: 1;
	}
	.drop2 . {
		--order: 2;
	}
	.drop3 {
		--order: 1;
	}
	.jumpscare {
		interpolate-size: allow-keywords;
		animation: jumpscare 0.2s ease-out forwards;
	}
	.reverse-jumpscare {
		animation: reverse-jumpscare 0.2s ease-out forwards;
	}

	.speech-bubble {
		position: fixed;

		width: 75ch;
		height: fit-content;

		left: 0;
		right: 100%;
		inset: 0;
		margin: auto;
		bottom: 4rem;

		line-height: 20px;
		font-size: 14px;
		padding: 10px;
		text-align: center;

		color: rgb(68, 90, 96);
		background: rgb(255, 255, 255);
		border: 4px solid rgb(255, 255, 255);
		border-radius: 5px;

		text-shadow: rgba(0, 0, 0, 0.1) 1px 1px 1px;
