	@keyframes scrollBackground {
		0% {
			background-position: 0 0;
		}
		100% {
			background-position: 250px 250px;
		}
	}

	@keyframes jumpscare {
		0% {
			transform: scale(0);
		}
		100% {
			transform: scale(1);
		}
	}

	@keyframes reverse-jumpscare {
		0% {
			transform: scale(1);
		}
		100% {
			transform: scale(0);
		}
	}

	@keyframes dropIn {
		0% {
			opacity: 0;
			transform: translateY(-20px);
		}
		100% {
			opacity: 1;
			transform: translateY(0);
		}
	}
